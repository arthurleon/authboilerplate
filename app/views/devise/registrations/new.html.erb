<div class="center-block vertical-center" style="width: 400px; text-align: center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "small-frm"}) do |f| %>
    <h1><%= Rails.application.class.parent %> App</h1>
    <h2><%= t("devise.views.titles.sign_up") %></h2>
    <%= devise_error_messages! %>
    
    <%= f.email_field :email, autofocus: true, placeholder: "seu@email.com.br" %>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Digite sua senha" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Digite novamente sua senha" %>

    <%= f.submit t("devise.views.links.sign_up"), class: "btn btn-lg btn-line btn-primary" %><br /><br />
    
    <%= render "devise/shared/links" %>
  <% end %>
</div>
